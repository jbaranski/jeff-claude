{
    "permissions": {
        "allow": [
            "Edit:*",
            "Write:*",
            "MultiEdit:*",
            "NotebookEdit:*",
            "Bash:*",
            "WebSearch",
            "WebSearch(query:*)"
        ],
        "defaultMode": "acceptEdits"
    },
    "hooks": {
        "Notification": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "afplay /System/Library/Sounds/Glass.aiff"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "afplay /System/Library/Sounds/Glass.aiff"
                    }
                ]
            }
        ]
    }
}